  loghost_alerts.security.uaauserfail.evaluation_time:
    description: "Evalutation time before firing alert"
    default: 0m
  loghost_alerts.security.uaaclientfail.threshold:
    description: "Amount of login failures in the past 5 minutes to trigger alert"
